@model UrestComplaintManagement.Context.Ticket

@{
    ViewBag.Title = "Complaint Close and Feedback";
}

<head>
    <link rel="stylesheet" href="~/Assets/Login.css">
    <link rel="stylesheet" href="~/Assets/rating.css">
</head>

<br />
<br />
<hr />
@Html.ActionLink("+ Create New Ticket", "CreateNewTicket", "Account", new { @style = "color:green;" })
<hr />

<p style=" color: beige; width: 100px; height: 20px; background-color: #f44336; text-align:center;">
    @*<button style="width: 80px; color: black; background-color: #f44336; font-weight: bold" href="#" onclick="history.go(-1);">Back</button>*@

    @Html.ActionLink("Back", "Complaint", "Account", new
    {
        Mobile = ViewData["MobileNo"]
    },
    new { @style = "color: black; background-color: #f44336; font-weight: bold" })
</p>

<h2 style="color:beige">Complaint Close and Feedback</h2>

<div style="color:beige">
    <b>@Html.DisplayNameFor(model => model.TicketId)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.TicketId)<br />
    <b>@Html.DisplayNameFor(model => model.TicketNumber)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.TicketNumber)<br />
    <b>@Html.DisplayNameFor(model => model.TicketOrigin)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.TicketOrigin)<br />
    <b>@Html.DisplayNameFor(model => model.Title)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.Title)<br />
    <b>@Html.DisplayNameFor(model => model.Description)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.Description)<br />
    <b>@Html.DisplayNameFor(model => model.Visibility)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.Visibility)<br />
    <b>@Html.DisplayNameFor(model => model.PausedComment)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.PausedComment)<br />
    <b>@Html.DisplayNameFor(model => model.TicketChannel)&nbsp; - </b>
    @Html.DisplayFor(modelItem => modelItem.TicketChannel)<br />
</div>


<br />
<div class="modal-content" style="width:100%">
    @using (Html.BeginForm())
    {
        <div class="modal-body">
            <h2 style="color:cadetblue">Your Feedback!!</h2>
            <div class="form-group">
                <div class="rate">
                    <input type="radio" id="star5" name="rate" value="5" />
                    <label for="star5" title="text">5 stars</label>
                    <input type="radio" id="star4" name="rate" value="4" />
                    <label for="star4" title="text">4 stars</label>
                    <input type="radio" id="star3" name="rate" value="3" />
                    <label for="star3" title="text">3 stars</label>
                    <input type="radio" id="star2" name="rate" value="2" />
                    <label for="star2" title="text">2 stars</label>
                    <input type="radio" id="star1" name="rate" value="1" />
                    <label for="star1" title="text">1 star</label>
                </div>

            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal" style="font-weight:bold">Submit</button>
                @Html.HiddenFor(modelItem => modelItem.TicketId)
                <input type="hidden" name="MobileNo" value=@ViewData["MobileNo"] />
            </div>
        </div>
    }
</div>

